# MySQL configuration for production (make run-prod).
# Copy to database.env (or .env) and fill in values. Do not commit credentials.
# Load before running: source config/database.env && make run-prod

export DB_DRIVER=mysql
export DB_DSN="user:password@tcp(host:3306)/piaflow?parseTime=true"

